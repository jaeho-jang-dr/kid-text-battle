run = "./replit-build.sh && npm run start"
modules = ["nodejs-20:v8-20240808-44c19a9"]
hidden = [".config", "package-lock.json", ".next"]
compile = "./replit-build.sh"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[deployment]
run = ["sh", "-c", "./replit-build.sh && npm run start"]
deploymentTarget = "cloudrun"
ignorePorts = false
buildCommand = "./replit-build.sh"

[[ports]]
localPort = 3000
externalPort = 3000

[nix]
channel = "stable-23_11"

[env]
NODE_ENV = "production"
DATABASE_URL = "file:./kid-text-battle.db"
PORT = "3000"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[languages]
[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[unitTest]
language = "nodejs"